    <script>
        // ä¿æŒåŸæœ¬çš„ Firebase è¨­å®šèˆ‡é‚è¼¯ä¸è®Š
        const firebaseConfig = {
            apiKey: "AIzaSyBxy3g2MS18oJdE2v-JAZ9VWXZwZQ9W4yM",
            databaseURL: "https://yunabuy-cf20c-default-rtdb.firebaseio.com/",
            projectId: "yunabuy-cf20c",
            appId: "1:994921038504:web:6b1c54b9a71ee425b3f89d"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();
        const dataRef = db.ref('yuna_v26_data'); 
        const preRef = db.ref('yuna_v26_preorder'); 

        let rawData = {}; let rawPre = {}; let activePickerCallback = null;

        function showPage(pageId) {
            document.getElementById('homePage').style.display = (pageId === 'home') ? 'grid' : 'none';
            document.querySelectorAll('.sub-page').forEach(p => p.classList.remove('active'));
            if(pageId !== 'home') document.getElementById(pageId).classList.add('active');
            window.scrollTo(0,0);
        }

        function setBuyer(name, btn) {
            document.getElementById('pBuyer').value = name;
            document.querySelectorAll('#part1 .btn-opt').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            document.getElementById('rayCardOptions').style.display = (name === 'Ray') ? 'block' : 'none';
        }
        function setRayCard(card, btn) {
            document.getElementById('pRayCard').value = card;
            document.querySelectorAll('#rayCardOptions .btn-opt').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }

        function openPicker(title, options, callback) {
            document.getElementById('modalTitle').innerText = title; activePickerCallback = callback;
            document.getElementById('modalOptions').innerHTML = options.map(opt => `<button class="modal-btn" onclick="handlePick('${opt}')">${opt}</button>`).join('');
            document.getElementById('selectorModal').style.display = 'flex';
        }
        function handlePick(val) { if(activePickerCallback) activePickerCallback(val); closeModal(); }
        function closeModal() { document.getElementById('selectorModal').style.display = 'none'; activePickerCallback = null; }

        function triggerImgEdit(refType, id) {
            const input = document.getElementById('editImgInput');
            input.onchange = async (e) => {
                const file = e.target.files[0];
                if(!file) return;
                const base64 = await new Promise(res => {
                    const reader = new FileReader();
                    reader.onload = ev => res(ev.target.result);
                    reader.readAsDataURL(file);
                });
                const ref = (refType === 'buy') ? dataRef : preRef;
                ref.child(id).update({ img: base64 });
                input.value = "";
            };
            input.click();
        }

        async function saveData() {
            const file = document.getElementById('pImg').files[0];
            let base64 = "";
            if(file) base64 = await new Promise(res => { const reader = new FileReader(); reader.onload = e => res(e.target.result); reader.readAsDataURL(file); });
            dataRef.push({
                name: document.getElementById('pName').value || "æœªå‘½å", priceN: document.getElementById('pPriceN').value || "0",
                priceTax: document.getElementById('pPriceTax').value || "0", priceSell: document.getElementById('pPriceSell').value || "0",
                qty: document.getElementById('pQty').value || "1", loc: document.getElementById('pLoc').value || "æœªå¡«",
                customer: document.getElementById('pCustomer').value || "æœªå¡«", buyer: document.getElementById('pBuyer').value || "æœªé¸",
                cardInfo: document.getElementById('pBuyer').value === 'Ray' ? (document.getElementById('pRayCard').value || "") : "",
                img: base64, time: new Date().toLocaleString()
            });
            ['pName','pPriceN','pPriceTax','pPriceSell','pLoc','pCustomer','pImg','pQty'].forEach(id=> {
                let el = document.getElementById(id);
                if(el) el.value = (id === 'pQty' ? '1' : '');
            });
            showPage('home');
        }

        async function savePreOrder() {
            const file = document.getElementById('preImg').files[0];
            let base64 = "";
            if(file) base64 = await new Promise(res => { const reader = new FileReader(); reader.onload = e => res(e.target.result); reader.readAsDataURL(file); });
            preRef.push({
                name: document.getElementById('preName').value || "æœªå‘½å", customer: document.getElementById('preCust').value || "æœªå¡«",
                qty: document.getElementById('preQty').value || "1",
                buyPrice: document.getElementById('preBuyPrice').value || "0", sellPrice: document.getElementById('preSellPrice').value || "0",
                isBought: false, img: base64, time: new Date().toLocaleString()
            });
            ['preName','preCust','preBuyPrice','preSellPrice','preImg','preQty'].forEach(id=> {
                let el = document.getElementById(id);
                if(el) el.value = (id === 'preQty' ? '1' : '');
            });
        }

        dataRef.on('value', snap => { rawData = snap.val() || {}; renderLists(); });
        preRef.on('value', snap => { rawPre = snap.val() || {}; renderLists(); });

        function editInList(id, field, current) {
            if(field === 'buyer') { openPicker("é¸æ“‡è²·æ‰‹", ['Ray', 'Nana', 'Cupid'], (val) => { let up = {buyer: val}; if(val !== 'Ray') up.cardInfo = ""; dataRef.child(id).update(up); }); }
            else if(field === 'cardInfo') { openPicker("é¸æ“‡å¡ç‰‡", ['naçˆ¸å¡', 'rayå¡'], (val) => { dataRef.child(id).update({cardInfo: val}); }); }
            else { let v = prompt(`ä¿®æ”¹ ${field}:`, current); if(v !== null) { let up = {}; up[field] = v; dataRef.child(id).update(up); } }
        }

        function editPreOrder(id, field, current) {
            let v = prompt(`ä¿®æ”¹é è³¼ ${field}:`, current); if(v !== null) { let up = {}; up[field] = v; preRef.child(id).update(up); }
        }

        function renderLists() {
            const buyArr = Object.entries(rawData).map(([id, val]) => ({ id, ...val })).reverse();
            document.getElementById('allList').innerHTML = buyArr.map(i => `
                <div class="item-row">
                    <div onclick="triggerImgEdit('buy', '${i.id}')">
                        <img src="${i.img || ''}" class="item-img">
                        <span class="img-tip">æ›´æ›ç…§ç‰‡</span>
                    </div>
                    <div class="item-info">
                        <div><span class="editable-field" onclick="editInList('${i.id}','name','${i.name}')">${i.name}</span></div>
                        <div class="price-grid">
                            <div class="price-tag"><span class="price-label">å«ç¨…æˆæœ¬</span>Â¥ <span class="editable-field" onclick="editInList('${i.id}','priceTax','${i.priceTax}')">${i.priceTax}</span></div>
                            <div class="price-tag"><span class="price-label">ğŸ’° å”®åƒ¹</span>Â¥ <span class="editable-field" onclick="editInList('${i.id}','priceSell','${i.priceSell}')">${i.priceSell}</span></div>
                        </div>
                        <div class="tag-row">
                            <span class="tag tag-active" onclick="editInList('${i.id}','qty','${i.qty}')">x ${i.qty || 1}</span>
                            <span class="tag tag-active" onclick="editInList('${i.id}','customer','${i.customer}')">ğŸ‘¤ ${i.customer}</span>
                            <span class="tag" onclick="editInList('${i.id}','loc','${i.loc}')">ğŸ“ ${i.loc}</span>
                            <span class="tag tag-active" onclick="editInList('${i.id}','buyer','${i.buyer}')">ğŸ§¤ ${i.buyer}</span>
                            ${i.buyer === 'Ray' ? `<span class="tag tag-active" onclick="editInList('${i.id}','cardInfo','${i.cardInfo}')">ğŸ’³ ${i.cardInfo || 'é¸å¡'}</span>` : ''}
                        </div>
                    </div>
                    <button onclick="if(confirm('ç¢ºå®šåˆªé™¤ï¼Ÿ')) dataRef.child('${i.id}').remove()" style="border:none;background:none;color:#ddd;padding:10px;">âœ•</button>
                </div>
            `).join('');

            const preArr = Object.entries(rawPre).map(([id, val]) => ({ id, ...val })).reverse();
            document.getElementById('preOrderList').innerHTML = preArr.map(i => `
                <div class="item-row" style="border-left: 6px solid ${i.isBought ? '#2ecc71' : '#eee'}">
                    <div onclick="triggerImgEdit('pre', '${i.id}')">
                        <img src="${i.img || ''}" class="item-img">
                        <span class="img-tip">æ›´æ›ç…§ç‰‡</span>
                    </div>
                    <div class="item-info">
                        <div><span class="editable-field" onclick="editPreOrder('${i.id}','name','${i.name}')">${i.name}</span></div>
                        <div class="price-grid">
                            <div class="price-tag"><span class="price-label">ä¼°ç®—æˆæœ¬</span>Â¥ <span class="editable-field" onclick="editPreOrder('${i.id}','buyPrice','${i.buyPrice}')">${i.buyPrice}</span></div>
                            <div class="price-tag"><span class="price-label">é ç´„å”®åƒ¹</span>Â¥ <span class="editable-field" onclick="editPreOrder('${i.id}','sellPrice','${i.sellPrice}')">${i.sellPrice}</span></div>
                        </div>
                        <div style="margin-top:5px">
                            <span class="tag tag-active" onclick="editPreOrder('${i.id}','qty','${i.qty}')">x ${i.qty || 1}</span>
                            <span class="tag tag-active" onclick="editPreOrder('${i.id}','customer','${i.customer}')">ğŸ‘¤ ${i.customer}</span>
                            <span class="tag ${i.isBought ? 'tag-active' : ''}" onclick="preRef.child('${i.id}').update({isBought: ${!i.isBought}})">${i.isBought ? 'â— å·²æ¡è³¼' : 'â—‹ ç¼ºè²¨ä¸­'}</span>
                        </div>
                    </div>
                    <button onclick="if(confirm('åˆªé™¤ï¼Ÿ')) preRef.child('${i.id}').remove()" style="border:none;background:none;color:#ddd">âœ•</button>
                </div>
            `).join('');
            renderSummary(buyArr, preArr);
        }

        function renderSummary(buyArr, preArr) {
            const groups = {};
            buyArr.forEach(i => { if(!groups[i.customer]) groups[i.customer] = { buy: [], pre: [] }; groups[i.customer].buy.push(i); });
            preArr.forEach(i => { if(!groups[i.customer]) groups[i.customer] = { buy: [], pre: [] }; groups[i.customer].pre.push(i); });
            document.getElementById('customerList').innerHTML = Object.keys(groups).map(c => {
                const bTotal = groups[c].buy.reduce((s, n) => s + (parseFloat(n.priceSell)*(parseInt(n.qty)||1)), 0);
                const pTotal = groups[c].pre.reduce((s, n) => s + (n.isBought ? (parseFloat(n.sellPrice)*(parseInt(n.qty)||1)) : 0), 0);
                return `<div class="card">
                    <div style="font-weight:bold; display:flex; justify-content:space-between; border-bottom:1px solid #f0f0f0; padding-bottom:15px; margin-bottom:15px;">
                        <span>ğŸ‘¤ ${c}</span>
                        <span style="color:var(--primary); font-size:18px;">Â¥ ${bTotal + pTotal}</span>
                    </div>
                    <div style="font-size:13px; line-height:1.8; color:#555;">
                        ${groups[c].buy.map(p => `<div style="display:flex; justify-content:space-between;"><span>â€¢ ${p.name} (x${p.qty || 1})</span><span>Â¥${p.priceSell}</span></div>`).join('')}
                        ${groups[c].pre.map(p => {
                            const statusLabel = p.isBought ? '<span style="color:#2a9d8f;">[å·²è²·]</span>' : '<span style="color:#8d99ae;">[ç¼º]</span>';
                            return `<div style="display:flex; justify-content:space-between;"><span>â€¢ ${statusLabel} ${p.name} (x${p.qty || 1})</span><span>${p.isBought ? 'Â¥'+p.sellPrice : '<strike>Â¥'+p.sellPrice+'</strike>'}</span></div>`;
                        }).join('')}
                    </div>
                </div>`;
            }).join('');
        }

        function exportToExcel() {
            const d = Object.values(rawData).map(i => ({ "é¡å‹": "ç¾å ´", "é¡§å®¢": i.customer, "å“å": i.name, "æ•¸é‡": i.qty, "å”®åƒ¹": i.priceSell, "æˆæœ¬": i.priceTax }));
            const p = Object.values(rawPre).map(i => ({ "é¡å‹": "é è³¼", "é¡§å®¢": i.customer, "å“å": i.name, "æ•¸é‡": i.qty, "å”®åƒ¹": i.sellPrice, "ç‹€æ…‹": i.isBought ? "å·²è²·" : "ç¼º" }));
            const ws = XLSX.utils.json_to_sheet([...d, ...p]);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "å°å¸³å–®");
            XLSX.writeFile(wb, `Yunaå°å¸³å–®_${new Date().toLocaleDateString()}.xlsx`);
        }
    </script>
